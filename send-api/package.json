{
	"name": "@mailchain/example-send-api",
	"version": "0.0.13",
	"description": "Mailchain SDK + Express API Server",
	"author": "",
	"license": "MIT",
	"scripts": {
		"start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
		"dev": "cross-env NODE_ENV=development nodemon",
