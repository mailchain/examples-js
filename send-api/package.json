		"lint:fix": "npm run lint -- --fix"
	},
	"dependencies": {
		"@mailchain/sdk": "0.16.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"helmet": "^5.1.1",
		"hpp": "^0.2.3",
		"morgan": "^1.10.0",
		"passport": "^0.6.0",
		"passport-http-bearer": "^1.0.1"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.220",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.15",
		"@types/hpp": "^0.2.2",
		"@types/jest": "^28.1.6",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.11.18",
		"@types/passport": "^1.0.11",
		"@types/passport-http-bearer": "^1.0.37",
		"@types/supertest": "^2.0.12",
		"cross-env": "^7.0.3",
		"jest": "^28.1.1",
		"node-config": "^0.0.2",
		"node-gyp": "^9.1.0",
		"nodemon": "^2.0.20",
		"supertest": "^6.2.4",
		"ts-jest": "^28.0.7",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.7.0",
		"tsconfig-paths": "^4.0.0",
		"typescript": "^4.9.4"
	}
